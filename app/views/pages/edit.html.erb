<%= form_with(model: @user, url: page_path(@user), local: true, html: { class: 'form-horizontal' }) do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this @user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, 'Nombre', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Título del @user' %>
      </div>
      <%= f.label :email, 'Email', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Título del @user' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :role, 'Rol', class: 'col-lg-2 control-label' %>
      <div class="col-lg-4">
        <%= f.select :role, options_for_select(User.roles.map {|k,v| [k,k]})%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Confirmar', class: 'btn btn-primary' %>
      </div>
    </div>
  </fieldset>
<% end %>
