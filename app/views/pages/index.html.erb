<p id="notice"><%= notice %></p>

<h1>users</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Email</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Editar', edit_page_path(user), class: 'btn btn-sm btn-success' %></td>
        <td>
        <% if can? :destroy, user %>
          <%= link_to 'Eliminar', page_path(user.id), method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar el user?' }, class: 'btn btn-sm btn-danger' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

